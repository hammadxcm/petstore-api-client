#!/usr/bin/env bash
set -euo pipefail

# Petstore API Client - Quick Test Script
# Run this from project root: ./bin/test

echo "ğŸ¾ Petstore API Client - Test Suite"
echo "===================================="
echo ""

# Check if bundle is installed
if ! command -v bundle &> /dev/null; then
    echo "âŒ Bundler not found. Please install: gem install bundler"
    exit 1
fi

# Check if dependencies are installed
if [ ! -d "vendor/bundle" ] && [ ! -d ".bundle" ]; then
    echo "ğŸ“¦ Installing dependencies..."
    bundle install
    echo ""
fi

# Run tests
echo "ğŸ§ª Running test suite..."
echo ""
bundle exec rspec --format progress

# Check exit code
if [ $? -eq 0 ]; then
    echo ""
    echo "âœ… All tests passed!"
    echo ""
    echo "ğŸ“Š Coverage report: coverage/index.html"
    echo "ğŸ” Run linter: bundle exec rubocop"
else
    echo ""
    echo "âŒ Tests failed!"
    exit 1
fi
